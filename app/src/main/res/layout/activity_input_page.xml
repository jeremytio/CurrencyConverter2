<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InputPage"
    android:clickable="true"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/convertTextView"
        android:text="@string/convertCADto"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="@dimen/text_padding"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/usButton"
        android:clickable="true"
        android:layout_below="@+id/convertTextView"
        android:layout_alignParentStart="true"
        android:src="@drawable/usflag"
        android:scaleType="fitXY"
        android:padding="@dimen/button_padding" />

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/euButton"
        android:layout_alignBottom="@id/usButton"
        android:layout_toEndOf="@id/usButton"
        android:clickable="true"
        android:src="@drawable/euflag"
        android:scaleType="fitXY"
        android:padding="@dimen/button_padding" />


</RelativeLayout>
